{
    "manifest_version": 3,
    "name": "Focus Manager",
    "version": "0.1",
    "author": "Foster Sullivan & Sakura Akiyama",
    "description": "Angry CS instructors to stay focused on your dreams.",

    "permissions" : [
      "tabs",
      "https://*/*",
      "http://*/*",
      "activeTab",
      "scripting"
    ],

    "host_permissions" : [
      "https://*/*",
      "http://*/*"
    ],

    "background": 
    {
      "service_worker": "main.js"
    },
    
    "web_accessible_resources": [
      {
        "resources": [ "/faces/*" ],
        "matches": [ "https://*/*", "http://*/*" ]
      }], 
      
    "content_scripts": [
      { 
         "matches": ["http://*/*"],
          "css": ["./style.css"]
      }
    ]
}

